{
  "compilerOptions": {
    "lib": ["es2021"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "lib",
    "module": "commonjs",
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".build/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "types"
  ]
}

